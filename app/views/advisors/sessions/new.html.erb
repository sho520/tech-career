<div class="adviser-login">
  <div class="adviser-login__inner">
    <div class="adviser-login__inner__info">
      <p>ログイン用メールアドレス</p><span>suzuki@suzuki</span>
      <p>ログイン用パスワード</p><span>123456</span>
    </div>
    <%= link_to root_path do %>
      <%= image_tag 'logo.png',class: "login-wrapper__inner__img" %>
    <% end %>
    <section class="adviser-login__inner__text">求人system</section>
    <div class="adviser-login__inner__main">
      <h2 class="adviser-login__inner__main__text">CAログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="adviser-login__inner__main__field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example", class: "adviser-login__inner__main__field__input" %>
        </div>

        <div class="adviser-login__inner__main__field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "ログインパスワードを入力してください", class: "adviser-login__inner__main__field__input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :記憶しますか？ %>
          </div>
        <% end %>

        <div class="adviser-login__inner__main__submit">
          <%= f.button "ログイン", class: "adviser-login__inner__main__submit__btn" %>
        </div>
      <% end %>

      <%= render "advisors/shared/links" %>

    </div>

  </div>

</div>
