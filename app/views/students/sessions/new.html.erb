<div class="login-wrapper">
  <div class="login-wrapper__inner">
    <div class="login-wrapper__inner__info">
      <p>ログイン用メールアドレス</p><span>tsuru@tsuru</span>
      <p>ログイン用パスワード</p><span>1234567890</span>
    </div>
    <%= link_to root_path do %>
      <%= image_tag 'logo.png',class: "login-wrapper__inner__img" %>
    <% end %>
    <section class="login-wrapper__inner__text">求人system</section>
    <div class="login-wrapper__inner__main">
      <h2 class="login-wrapper__inner__main__text">受講生ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="login-wrapper__inner__main__field">
        <%= f.label :email %><span class="login-wrapper__inner__main__field__flag">必須</span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example", class: "login-wrapper__inner__main__field__input" %>
      </div>

      <div class="login-wrapper__inner__main__field">
        <%= f.label :password %><span class="login-wrapper__inner__main__field__flag">必須</span><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください", class: "login-wrapper__inner__main__field__input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="login-wrapper__inner__main__field">
          <%= f.check_box :remember_me %>
          <%= f.label :記憶しますか？ %>
        </div>
      <% end %>

      <div class="login-wrapper__inner__main__submit">
        <%= f.button "ログイン", class: "login-wrapper__inner__main__submit__btn" %>
      </div>
      <% end %>
      <%= render "students/shared/links" %>
    </div>
  </div>
</div>
