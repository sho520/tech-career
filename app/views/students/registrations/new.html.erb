<div class="from-wrapper">

  <% if @student.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <script>
    $('#error_explanation').fadeOut(3000);
  </script>
  <% end %>

  <div class="from-wrapper__inner">
    <section class="from-wrapper__inner__title">受講生登録フォーム</section>
    <section class="from-wrapper__inner__text">求人system</section>
    <div class="from-wrapper__inner__main">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="from-wrapper__inner__main__formarea">

            <!-- ここから画像アップロード -->
            <label for="file_photo" class="rounded-circle from-wrapper__inner__main__formarea__image">
              <div class="from-wrapper__inner__main__formarea__image__title">画像をアップロード</div>
              <i class="fa fa-camera fa-3x"></i>
              <%= f.file_field :image, id: "file_photo" %>
            </label>
            <!-- ここから画像プレビュー -->
            <div class="from-wrapper__inner__main__formarea__preview" id="userImgPreview">
              <img id="thumbnail" class="from-wrapper__inner__main__formarea__preview__pic" accept="image/*" src="">
              <p class="from-wrapper__inner__main__formarea__preview__text">画像をアップロードしました</p>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :名前,class: 'from-wrapper__inner__main__formarea__field__label' %><span class="from-wrapper__inner__main__formarea__field__flag">必須</span><br/>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "山田 一郎", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :メールアドレス %><span class="from-wrapper__inner__main__formarea__field__flag">必須</span><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :住所 %><br/>
              <%= f.text_field :address, autofocus: true, autocomplete: "email", placeholder: "東京都", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :生年月日 %><br/>
              <div class="from-wrapper__inner__main__formarea__field__birthday">
                <%= f.text_field :birth_year, autofocus: true, autocomplete: "birth_year", placeholder: "1980",class: "from-wrapper__inner__main__formarea__field__birthday__form" %>
                <span>年</span>
                <%= f.text_field :birth_month, autofocus: true, autocomplete: "birth_month", placeholder: "05",class: "from-wrapper__inner__main__formarea__field__birthday__form" %>
                <span>月</span>
                <%= f.text_field :birth_day, autofocus: true, autocomplete: "birth_day", placeholder: "30",class: "from-wrapper__inner__main__formarea__field__birthday__form" %>
                <span>日</span>
              </div>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :年齢 %><br/>
              <%= f.text_field :age, autofocus: true, autocomplete: "email", placeholder: "25", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :受講期 %><span class="from-wrapper__inner__main__formarea__field__flag">必須</span><br/>
              <%= f.text_field :period, autofocus: true, autocomplete: "email", placeholder: "45", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :チーム %><br/>
              <%= f.text_field :team, autofocus: true, autocomplete: "email", placeholder: "A", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <div class="from-wrapper__inner__main__formarea__field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください", class: "from-wrapper__inner__main__formarea__field__input" %>
            </div>

            <%= f.hidden_field :advisor_id, value:1 %>

            <div class="from-wrapper__inner__main__formarea__submit">
              <%= f.button "新規登録する",class: "from-wrapper__inner__main__formarea__submit__btn" %>
            </div>

          </div>
      <% end %>

      <%= render "students/shared/links" %>
    </div>
  </div>
</div>
