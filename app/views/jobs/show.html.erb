              queue : false
          });
      });
    </script>
    <% if student_signed_in?%>
      <% if @state.student_job_state.id <= 2 && @job.job_state_id == 1%>
        <div class = "job__main__detail__apply">
          <%= link_to "応募する", apply_job_path(id: @state.job_id) %>
        </div>
      <% end %>
