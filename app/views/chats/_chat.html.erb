    <%# <% end %> 
    </div>
    <div class="top__contentbox__right__chatbox__submit">
      <%# if student_signed_in? %>
        <%#= form_for(@chats , url: {controller: "chats", action: "create"}) do |f| %>
          <%#= f.text_field :comment, class: "top__contentbox__right__submit__message",id:"submit__button" %>
